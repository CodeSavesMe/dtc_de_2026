# ----------------------------
# Database (PostgreSQL)
# ----------------------------
# Local runs: typically "localhost"
# Docker Compose runs: DB_HOST is overridden to "db" inside the container
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=ny_taxi
DB_SCHEMA=public

# ----------------------------
# Default ingestion parameters
# ----------------------------
TAXI=green
YEAR=2021
MONTH=01
FILE_FORMAT=parquet

# ----------------------------
# Ingestion strategy
# ----------------------------
# IF_EXISTS: replace | skip | fail | append
IF_EXISTS=replace
KEEP_LOCAL=true

# ----------------------------
# Loader tuning (defaults in code)
# ----------------------------
LOADER_CHUNK_SIZE=50000
LOADER_BATCH_SIZE=10000

# ----------------------------
# Paths / logging
# ----------------------------
# DATA_DIR overrides the runtime download directory (default: ./data)
DATA_DIR=
LOG_LEVEL=INFO

# Progress bar friendly console output (default in code: true)
ENABLE_PROGRESS=true

# ----------------------------
# Optional: used by ingest-url command
# ----------------------------
DATA_URL=